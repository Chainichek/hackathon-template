<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1722771413666-1" author="daniyar">
        <sql>
            CREATE SCHEMA IF NOT EXISTS employee
        </sql>
        <rollback>
            <sql>
                DROP SCHEMA IF EXISTS employee
            </sql>
        </rollback>
    </changeSet>
    <changeSet id="1722771413666-2" author="daniyar">
        <createTable schemaName="employee"  tableName="employees">
            <column name="employee_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_employees"/>
            </column>
            <column name="login" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
            <column name="is_removed" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="1722771413666-3" author="daniyar">
        <createTable schemaName="employee"  tableName="groups">
            <column name="group_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_groups"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="is_removed" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="1722771413666-4" author="daniyar">
        <createTable schemaName="employee"  tableName="groups_employees">
            <column name="employee_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>